<% if flash.has?(:message) %>
    <%= flash[:message] %>
<% end %>
<h2>Sign Up</h2>
<form action="/signup" method="POST">
    Email: <input type="text" name="user[email]">
    Create Username: <input type="text" name="user[username]">
    Create Password: <input type="password" name="user[password]">
    <button type="submit">submit</button>
</form>

